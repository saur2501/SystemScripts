-------build.gradle
plugins {
    id 'java'               // Apply the Java plugin
    id 'application'        // Apply the Application plugin
}

repositories {
    mavenCentral()          // Use Maven Central for dependencies
}

dependencies {
    implementation 'com.google.guava:guava:31.1-jre'  // Example dependency
    testImplementation 'junit:junit:4.13.2'           // JUnit for testing
}

application {
    mainClass = 'App'       // Specify the main class
}
